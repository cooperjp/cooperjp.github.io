---
// src/layouts/Layout.astro
interface Props {
	title: string;
	currentPage: 'about' | 'cv' | 'portfolio';
}

const { title, currentPage } = Astro.props;
---

<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="JP Cooper" />
		<title>{title}</title>
		<style>
			body {
				font-family: 'Roboto Slab', serif;
				max-width: 800px;
				margin: 0 auto;
				padding: 3rem;
				line-height: 1.6;
				color: #222;
			}
			
			h1 {
				font-size: 2.5rem;
				font-weight: normal;
				margin: 2rem 0;
				text-align: center;
			}
			
			h2 {
				font-size: 2rem;
				font-weight: normal;
				margin: 2rem 0;
			}
			
			nav {
				display: flex;
				justify-content: center;
				gap: 2rem;
				margin: 2rem 0;
			}
			
			nav a {
				color: #222;
				text-decoration: none;
				padding-bottom: 2px;
				transition: border-color 0.2s ease;
			}
			
			nav a.active {
				border-bottom: 1px solid #222;
			}
			
			nav a:hover {
				border-bottom: 1px solid #666;
			}
			
			main {
				margin: 4rem 0;
			}
			
			p {
				margin: 1.5rem 0;
				font-size: 1.1rem;
				line-height: 1.7;
			}

			@media (max-width: 768px) {
				body {
					padding: 1rem;
				}

				h1 {
					font-size: 2rem;
				}

				h2 {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<header>
			<h1>John-Paul (JP) Cooper</h1>
			<nav>
				<a href="/" class={currentPage === 'about' ? 'active' : ''}>
					About
				</a>
				<a href="/cv" class={currentPage === 'cv' ? 'active' : ''}>
					CV
				</a>
				<a href="/portfolio" class={currentPage === 'portfolio' ? 'active' : ''}>
					Portfolio
				</a>
			</nav>
		</header>

		<main>
			<slot />
		</main>
	</body>
</html>
