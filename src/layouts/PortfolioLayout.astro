---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | JP Cooper`} currentPage="portfolio">
    <div class="portfolio-item">
        <a href="/portfolio" class="back-link">
            ‚Üê Back to Portfolio
        </a>
        
        <article class="content">
            <h1>{frontmatter.title}</h1>
            <div class="metadata">
                <span class="date">
                    {new Date(frontmatter.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long'
                    })}
                </span>
            </div>
            <slot />
        </article>
    </div>
</Layout>

<style>
    .portfolio-item {
        max-width: 65ch;
        margin: 0 auto;
        padding-top: 2rem;
    }

    .back-link {
        display: inline-block;
        text-decoration: none;
        color: #666;
        margin-bottom: 2rem;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.2s ease;
    }

    .back-link:hover {
        background-color: #f5f5f5;
        transform: translateX(-5px);
    }

    .metadata {
        margin: 1rem 0 2rem;
        color: #666;
    }

    .content {
        line-height: 1.7;
    }

    .content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 2rem 0;
    }

    .content :global(h2) {
        margin-top: 2rem;
    }

    .content :global(pre) {
        padding: 1rem;
        border-radius: 8px;
        background: #f5f5f5;
        overflow-x: auto;
    }
</style>